{
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  // "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "editor.wordWrap": "on",
  "editor.snippetSuggestions": "top",
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "gitProjectManager.searchInsideProjects": false,
  "gitProjectManager.baseProjectsFolders": ["/Users/VincentBel/dev/"],
  "gitProjectManager.ignoredFolders": ["node_modules"],
  "local-history.path": "/Users/VincentBel/dev/dotfiles/.vscode/",
  "prettier.eslintIntegration": true,
  "prettier.semi": false,
  "prettier.trailingComma": "es5",
  "prettier.singleQuote": true,
  "prettier.printWidth": 80,
  "vim.useSystemClipboard": true,
  "vim.leader": " ",
  "vim.overrideCopy": false,
  "vim.otherModesKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["<leader>", "g", "o"],
      "after": [],
      "commands": [
        {
          "command": "extension.openInGitHub",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "g", "d"],
      "after": [],
      "commands": [
        {
          "command": "git.openChange",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "l", "h"],
      "after": [],
      "commands": [
        {
          "command": "local-history.compareToActive",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "f", "d"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.formatDocument",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "f", "s"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.formatSelection",
          "args": []
        }
      ]
    },
    {
      // lint next
      "before": ["<leader>", "l", "n"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.marker.next",
          "args": []
        }
      ]
    },
    {
      // rename symbol
      "before": ["<leader>", "r", "s"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.rename",
          "args": []
        }
      ]
    },
    {
      // open markdown preview
      "before": ["<leader>", "m", "p"],
      "after": [],
      "commands": [
        {
          "command": "markdown.showPreviewToSide",
          "args": []
        }
      ]
    }
  ],
  "terminal.external.osxExec": "iTerm.app",
  "cSpell.userWords": [
    "couchbase",
    "deletable",
    "denormalize",
    "dropdown",
    "errored",
    "frontmatter",
    "hdfs",
    "lifecycle",
    "nginx",
    "polyfill",
    "redshift",
    "refetch",
    "rentity",
    "unmount",
    "waypoint"
  ],
  "vim.easymotion": true,
  "cSpell.enabledLanguageIds": [
    "c",
    "cpp",
    "csharp",
    "go",
    "javascript",
    "javascriptreact",
    "json",
    "latex",
    "markdown",
    "php",
    "plaintext",
    "python",
    "text",
    "typescript",
    "typescriptreact",
    "yml"
  ],
  "importCost.bundleSizeDecoration": "gzipped",
  "docker.showExplorer": false,
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": true
  },
  "macros": {
    "commentAndCursorDown": [
      "editor.action.commentLine",
      "cursorDown"
    ]
  },
  "pasteImage.path": "./images",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.folders.color": "#78909c"
}
