{

    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "vscode-icons",
    "editor.tabSize": 2,
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    // "editor.formatOnSave": true,
    "editor.lineNumbers": "relative",
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "gitProjectManager.searchInsideProjects": false,
    "gitProjectManager.baseProjectsFolders": [
        "/Users/VincentBel/dev/"
    ],
    "gitProjectManager.ignoredFolders": [
        "node_modules"
    ],
    "local-history.path": "/Users/VincentBel/dev/dotfiles/.vscode/",
    "prettier.semi": false,
    "prettier.trailingComma": "all",
    "prettier.singleQuote": true,
    "prettier.printWidth": 100,
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.useSystemClipboard": true,
    "vim.leader": " ",
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "g", "o"],
            "after": [],
            "commands": [
                {
                    "command": "extension.openInGitHub",
                    "args": []
                }
            ]
        },
        {
            "before": ["<leader>", "g", "d"],
            "after": [],
            "commands": [
                {
                    "command": "git.openChange",
                    "args": []
                }
            ]
        },
        {
            "before": ["<leader>", "l", "h"],
            "after": [],
            "commands": [
                {
                    "command": "local-history.compareToActive",
                    "args": []
                }
            ]
        },
        {
            "before": ["<leader>", "l", "f"],
            "after": [],
            "commands": [
                {
                    "command": "prettier-eslint.format",
                    "args": []
                }
            ]
        },
        {
            "before": ["<leader>", "l", "n"],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.marker.next",
                    "args": []
                }
            ]
        }
    ],
    "vsicons.presets.foldersAllDefaultIcon": true,
    "terminal.external.osxExec": "iTerm.app"
}
